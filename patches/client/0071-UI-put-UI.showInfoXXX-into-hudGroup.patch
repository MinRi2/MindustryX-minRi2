diff --git a/core/src/mindustry/core/UI.java b/core/src/mindustry/core/UI.java
index b3683879a2b1ddec68ec18bfdd1b7179a7bf1b05..acfda0e35f29d783cb69a7a95db08dd3f47a31fa 100644
