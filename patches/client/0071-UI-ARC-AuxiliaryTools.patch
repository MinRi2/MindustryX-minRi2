+    }
+
+    @Override
+    public void init(){
+        if(!unit.canMine()) return;
+
+        if(unit.type.mineFloor){
+            canMineList = oreList.map(b -> b.itemDrop).select(i -> unit.canMine(i));
+        }else if(unit.type.mineWalls){
+            canMineList = oreWallList.map(b -> b.itemDrop).select(i -> unit.canMine(i));
