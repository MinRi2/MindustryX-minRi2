+                if(enemy != null){
+                    unit.clearBuilding();
+                    var core = unit.closestCore();
+                    if(core != null && !unit.within(core, retreatDst)){
+                        moveTo(core, retreatDst);
+                    }
+                }
+            }
+        }
+
+        if(unit.buildPlan() != null){
+            if(unit.controller() == Vars.player && control.input instanceof DesktopInput di) di.isBuilding = true;
